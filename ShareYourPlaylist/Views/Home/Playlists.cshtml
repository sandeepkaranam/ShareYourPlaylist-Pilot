@model ShareYourPlaylist.Models.PlaylistsViewModel

<div class="container">
    <h1>Welcome to ShareYourPlaylist</h1>

    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["Error"]
        </div>
    }

    <h2 class="mt-4">Trending Playlists</h2>

    <div class="row">
        @foreach (var playlist in Model.Playlists)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <!-- Playlist Image -->
                    @if (!string.IsNullOrEmpty(playlist.ImageUrl))
                    {
                        <img src="@playlist.ImageUrl" class="card-img-top" alt="@playlist.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="~/images/default-playlist-image.jpg" class="card-img-top" alt="Default Playlist Image" style="height: 200px; object-fit: cover;">
                    }

                    <div class="card-body">
                        <h5 class="card-title">@playlist.Name</h5>
                        <a asp-action="DisplayPlaylistSongs" asp-route-playlistId="@playlist.Id" class="btn btn-primary">View Songs</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

