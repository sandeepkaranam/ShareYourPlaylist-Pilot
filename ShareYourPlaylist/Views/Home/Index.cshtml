@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShareYourPlaylist</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Full-screen background image */
        .background-image {
            background: url('@Url.Content("/images/first-image.jpg")') no-repeat center center fixed;
            background-size: cover;
            height: 100vh; /* Full screen height */
            width: 100%;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Text overlay styling */
        .content-overlay {
            text-align: center;
            color: white;
        }

            .content-overlay h1 {
                font-size: 4rem; /* Larger font size for headline */
                font-weight: bold;
                margin-bottom: 0.5rem; /* Reduced bottom margin */
            }

            .content-overlay p {
                font-size: 1.5rem; /* Slightly larger font size for better readability */
                max-width: 80%; /* Limiting the text width for aesthetics */
                margin: auto; /* Centering text block */
            }
    </style>
</head>
<body>
    <div class="background-image">
        <div class="content-overlay">
            <h1>Welcome to ShareYourPlaylist</h1>
            <p>Explore playlists, create your own, and share the vibe with friends. Discover, share, and create playlists to suit every mood.</p>
        </div>
</div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
